# FAUCET (opcional - para dar FELICOINS gratis)
FAUCET_PRIVATE_KEY=otra_clave_privada_con_tokens
FAUCET_AMOUNT=10000
FAUCET_COOLDOWN_HOURS=24

# CORS & FRONTEND
FRONTEND_URL=https://tudominio.com
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# SERVER
PORT=5000
NODE_ENV=production

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# LOG LEVEL
LOG_LEVEL=info

