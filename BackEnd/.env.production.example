# ===========================================
# FELIMARKET BACKEND - PRODUCTION CONFIG
# ===========================================

# DATABASE (Railway lo proporciona autom√°ticamente, no editar)
DATABASE_URL=postgresql://postgres:password@host:5432/railway

# JWT & SECURITY
JWT_SECRET=CAMBIAR_POR_SECRETO_SUPER_SEGURO_ALEATORIO_LARGO
JWT_EXPIRES_IN=7d

# BLOCKCHAIN - SEPOLIA TESTNET
BLOCKCHAIN_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/TU_ALCHEMY_API_KEY
BLOCKCHAIN_NETWORK=sepolia

# SMART CONTRACTS (copiar desde BlockChain/deployments/sepolia.json)
FELICOIN_TOKEN_ADDRESS=0x...
LOYALTY_PAYMENT_ADDRESS=0x...
EVENT_TICKET_ADDRESS=0x...
STAKING_ADDRESS=0x...
IDENTITY_REGISTRY_ADDRESS=0x...
GOVERNOR_ADDRESS=0x...

# DEPLOYER WALLET (para escuchar eventos)
